{
    "name": "ASP.NET Core and React",
    "image": "mcr.microsoft.com/devcontainers/dotnet:8.0-jammy",

    "features": {
        // Явно добавляем Node.js (LTS-версию) к нашему .NET-образу
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },

    "forwardPorts": [
        5001,
        5000, 
        3000
    ],

    "postCreateCommand": "dotnet restore backend/backend.csproj && npm install --prefix frontend",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csdevkit",
                "dbaeumer.vscode-eslint"
            ]
        }
    },

    "portsAttributes": {
        "5001": {
            "label": "Backend (HTTPS)",
            "onAutoForward": "openBrowser"
        },
        "5000": {
            "label": "Backend (HTTP)"
        },
        "3000": {
            "label": "Frontend (React)",
            "onAutoForward": "notify"
        }
    }
}