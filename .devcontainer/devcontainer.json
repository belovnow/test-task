{
    "name": "ASP.NET Core and React",
    // Используем специализированный образ для .NET, который уже включает Node.js
    "image": "mcr.microsoft.com/devcontainers/dotnet:8.0-jammy",

    "forwardPorts": [
        // Пробрасываем порты: 5001/5000 для .NET и 3000 для React
        5001,
        5000, 
        3000
    ],

    // Действия после создания Codespace
    // Устанавливаем зависимости для фронтенда и бэкенда
    "postCreateCommand": "dotnet restore backend/backend.csproj && npm install --prefix frontend",

    "customizations": {
        "vscode": {
            "extensions": [
                // Рекомендуемые расширения для VS Code
                "ms-dotnettools.csdevkit",
                "dbaeumer.vscode-eslint"
            ]
        }
    },

    "portsAttributes": {
        "5001": {
            "label": "Backend (HTTPS)",
            "onAutoForward": "openBrowser"
        },
        "5000": {
            "label": "Backend (HTTP)"
        },
        "3000": {
            "label": "Frontend (React)",
            "onAutoForward": "notify"
        }
    }
}